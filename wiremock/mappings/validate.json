{
  "mappings": [
    {
      "priority": 1,
      "request": {
        "method": "POST",
        "urlPath": "/validate",
        "bodyPatterns": [
          {
            "matchesJsonPath": "$[?(@.amount < 10000)]"
          }
        ]
      },
      "response": {
        "status": 200,
        "jsonBody": {
          "valid": true,
          "message": "Order validated successfully"
        },
        "headers": {
          "Content-Type": "application/json"
        }
      }
    },
    {
      "priority": 2,
      "request": {
        "method": "POST",
        "urlPath": "/validate",
        "bodyPatterns": [
          {
            "matchesJsonPath": "$[?(@.amount >= 10000)]"
          }
        ]
      },
      "response": {
        "status": 200,
        "jsonBody": {
          "valid": false,
          "message": "Amount exceeds maximum allowed limit of $10,000"
        },
        "headers": {
          "Content-Type": "application/json"
        }
      }
    },
    {
      "priority": 3,
      "request": {
        "method": "POST",
        "urlPath": "/validate"
      },
      "response": {
        "status": 200,
        "jsonBody": {
          "valid": true,
          "message": "Order validated successfully"
        },
        "headers": {
          "Content-Type": "application/json"
        }
      }
    }
  ]
}
